<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/my-cart.css" >

</head>

<body>

<%- include('../includes/navigation.ejs') %>

  <main>
    <h1>My cart</h1>
    <br/>
    <% if (products.length) { %>
      <h2>Total: <%- totalPrice %></h2>
      <br/>
      <ul class="my-cart-box">
        <% for (let product of products) { %>
          <li class="my-cart-product">
            <img src="<%- product.urlImage%>" width="20%"/>
            <h4><%- product.name%></h4>
            <h3>$ <%- product.price%></h4>
            <form action="/my-cart/delete" method="POST">
              <button>delete</button>
              <input type="hidden" name="cartId" value="<%- product.cartId %>"/>
            </form>
          </li>
        <% } %>
      </ul>
    <% } else { %>
      <h3> your cart is empty </h3>
    <% } %>
    
  </main>

<%- include('../includes/end.ejs') %>
