<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/products.css">

</head>

<body>

<%- include('../includes/navigation.ejs') %>

  <main>
    <% if (products.length) { %>
       <div class="big-box">
        <% for(let product of products) { %>
          <div class="product-box all-products-box">
            <img src="<%- product.urlImage %>"
            width="100%"/>
            <div class="product-name">
              <h2> <%- product.name %> </h2>
            </div>
            <div class="product-price">
              <h4> $ <%- product.price %> </h4>
            </div>
            <div class="button-box">
              <form action="/admins/edit-product" method="POST">
                <button>
                  Edit
                </button>
                <input type="hidden" name="productId" value="<%- product.id %>"/>
              </form>
              <form action="/admins/delete-product" method="POST">
                <button>
                  Delete
                </button>
                <input type="hidden" name="productId" value="<%- product.id %>"/>
              </form>
            </div>
          </div>
        <% } %>
      </div>
    <% } else { %>
      <h1>No Products</h1>
    <% } %>
  </main>

<%- include('../includes/end.ejs') %>
